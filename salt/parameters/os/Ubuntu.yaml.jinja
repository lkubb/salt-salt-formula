# vim: ft=sls
# yamllint disable rule:line-length
---
values:
  lookup:
    repos:
      latest:
        name: >-
          deb [signed-by=/usr/share/keyrings/salt-archive-keyring.gpg arch=amd64]
          https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/latest {{ grains.oscodename }} main
        key_url: https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/latest/salt-archive-keyring.gpg
      major:
        name: >-
          deb [signed-by=/usr/share/keyrings/salt-archive-keyring.gpg arch=amd64]
          https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/{major} {{ grains.oscodename }} main
        key_url: https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/{major}/salt-archive-keyring.gpg
      minor:
        name: >-
          deb [signed-by=/usr/share/keyrings/salt-archive-keyring.gpg arch=amd64]
          https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/minor/{major}.{minor} {{ grains.oscodename }} main
        key_url: https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/minor/{major}.{minor}/salt-archive-keyring.gpg
...
