# vim: ft=sls
# yamllint disable rule:line-length
---
values:
  lookup:
    repos:
      latest:
        name: >-
          deb [signed-by=/usr/share/keyrings/{key_file_name} arch=amd64]
          https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/latest {{ grains.oscodename }} main
        key_url: https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/latest/{key_file_name}
        key_file:
          default: salt-archive-keyring.gpg
          '3006': SALT-PROJECT-GPG-PUBKEY-2023.gpg
      major:
        name: >-
          deb [signed-by=/usr/share/keyrings/{key_file_name} arch=amd64]
          https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/{major} {{ grains.oscodename }} main
        key_url: https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/{major}/{key_file_name}
        key_file:
          default: salt-archive-keyring.gpg
          '3006': SALT-PROJECT-GPG-PUBKEY-2023.gpg
      minor:
        name: >-
          deb [signed-by=/usr/share/keyrings/{key_file_name} arch=amd64]
          https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/minor/{major}.{minor} {{ grains.oscodename }} main
        key_url: https://repo.saltproject.io/salt/py3/ubuntu/{{ grains.osrelease }}/amd64/minor/{major}.{minor}/{key_file_name}
        key_file:
          default: salt-archive-keyring.gpg
          '3006': SALT-PROJECT-GPG-PUBKEY-2023.gpg
...
